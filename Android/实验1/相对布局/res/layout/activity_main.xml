<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	>
<!-- 定义该组件位于父容器中间 -->	
<TextView 
	android:id="@+id/view01"
	android:layout_width="100sp" 
	android:layout_height="100sp" 
	android:background="@drawable/ajax"
	android:layout_centerInParent="true"
	/>
<!-- 定义该组件位于view01组件的上方 -->
<TextView 
	android:id="@+id/view02"
	android:layout_width="100sp" 
	android:layout_height="100sp" 
	android:background="@drawable/classic"
	android:layout_above="@id/view01"
	android:layout_alignLeft="@id/view01"
	/>
<!-- 定义该组件位于view01组件的下方 -->
<TextView 
	android:id="@+id/view03"
	android:layout_width="100sp" 
	android:layout_height="100sp" 
	android:background="@drawable/ee"
	android:layout_below="@id/view01"
	android:layout_alignLeft="@id/view01"
	/>
<!-- 定义该组件位于view01组件的左边 -->
<TextView 
	android:id="@+id/view04"
	android:layout_width="100sp" 
	android:layout_height="100sp" 
	android:background="@drawable/java"
	android:layout_toLeftOf="@id/view01"
	android:layout_alignTop="@id/view01"
	/>
<!-- 定义该组件位于view01组件的右边 -->
<TextView 
	android:id="@+id/view05"
	android:layout_width="100sp" 
	android:layout_height="100sp" 
	android:background="@drawable/xml"
	android:layout_toRightOf="@id/view01"
	android:layout_alignTop="@id/view01"
	/>

<TextView
    android:id="@+id/textView1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="程虎威_151001215"
    android:textSize="20sp"
    android:layout_above="@id/view02"
    android:layout_alignLeft="@id/view02"

   />
		
</RelativeLayout>
